---
import Schedule from '../components/Schedule.astro';
import { useTranslations } from '../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
  <title>Schedule - DANA & THOMAS</title>
</head>
<body class="bg-gray-50">
  <Schedule lang={lang} t={t} />
  <script>
    function setupLanguageSelector() {
      const selector = document.getElementById('language-selector');
      if (!selector) return;
      
      // Set correct option based on current URL
      const currentLang = window.location.pathname.startsWith('/fr') ? 'fr' : 'en';
      selector.value = currentLang;
      
      // Remove existing listeners to prevent duplicates
      selector.replaceWith(selector.cloneNode(true));
      const newSelector = document.getElementById('language-selector');
      
      newSelector.addEventListener('change', function(e) {
        const selectedLang = e.target.value;
        const currentPath = window.location.pathname;
        
        // Extract the current page from path
        let currentPage = '';
        if (currentPath.includes('/schedule')) currentPage = 'schedule';
        else if (currentPath.includes('/venue')) currentPage = 'venue';
        else if (currentPath.includes('/accommodation')) currentPage = 'accommodation';
        else if (currentPath.includes('/qa')) currentPage = 'qa';
        else if (currentPath.includes('/rsvp')) currentPage = 'rsvp';
        
        // Build new URL
        if (selectedLang === 'fr') {
          if (currentPage) {
            window.location.href = `/${selectedLang}/${currentPage}`;
          } else {
            window.location.href = `/${selectedLang}/`;
          }
        } else {
          if (currentPage) {
            window.location.href = `/${currentPage}`;
          } else {
            window.location.href = '/';
          }
        }
      });
    }
    
    // Setup on initial load
    setupLanguageSelector();
    
    // Re-setup after each view transition
    document.addEventListener('astro:after-swap', setupLanguageSelector);
  </script>
</body>
</html>