---
import PageWrapper from './PageWrapper.astro';

const { lang = 'en', t } = Astro.props;
---

<PageWrapper title={t("venue.title")} lang={lang} t={t}>
  <div class="w-full max-w-7xl">
    <!-- Split Layout: Content on left, Image/Map on right -->
    <div class="grid lg:grid-cols-2 gap-12 items-start">
      
      <!-- Left Side: Content -->
      <div class="space-y-8">
        <!-- Venue Name -->
        <div>
          <h2 class="text-xl font-normal text-gray-900 mb-2 uppercase">{t("venue.name")}</h2>
          <div class="text-sm text-gray-500 uppercase tracking-wide font-normal">Bucharest, Romania</div>
        </div>
        
        <!-- Description with better typography -->
        <div class="space-y-6">
          <p class="text-gray-600 font-normal leading-relaxed">
            {t("venue.description")}
          </p>
          
          <div class="p-6 border-l-2 border-[#428bb0]">
            <h3 class="text-[#428bb0] font-medium mb-3">Weather Backup Plan</h3>
            <p class="text-gray-600 font-normal leading-relaxed">
              {t("venue.rain")}
            </p>
          </div>
        </div>
        
        <!-- Venue Features -->
        <div class="space-y-4">
          <h3 class="text-xl font-normal text-gray-900">Venue Features</h3>
          <div class="grid grid-cols-2 gap-4 text-sm">
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-gray-400"></div>
              <span class="text-gray-600">Outdoor Terrace</span>
            </div>
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-gray-400"></div>
              <span class="text-gray-600">Garden Setting</span>
            </div>
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-gray-400"></div>
              <span class="text-gray-600">Indoor Backup</span>
            </div>
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 bg-gray-400"></div>
              <span class="text-gray-600">Parking Available</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right Side: Visual Content -->
      <div class="space-y-3">
        <!-- Venue Image -->
        <div class="aspect-[7/3] overflow-hidden bg-gray-200">
          <img 
            src="https://images.unsplash.com/photo-1519167758481-83f29c8cb4f1?w=600&h=400&fit=crop" 
            alt="Loft Diplomat Venue" 
            class="w-full h-full object-cover"
          />
        </div>
        
        <!-- Map -->
        <div class="aspect-[7/3] overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2848.0123456789!2d26.0975!3d44.4682!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40b201c0b0b0b0b0%3A0x1234567890abcdef!2sLoft%20Diplomat%2C%20Bucharest%2C%20Romania!5e0!3m2!1sen!2sus!4v1645123456789!5m2!1sen!2sus"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade">
          </iframe>
        </div>
      </div>
      
    </div>
  </div>
</PageWrapper>